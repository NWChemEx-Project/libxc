#!/bin/bash
cmake -H. -Bbuild-hip -DCMAKE_TOOLCHAIN_FILE=./toolchain_hip.cmake -DCMAKE_MODULE_PATH="/sw/summit/hip/hip2.6-cuda10.1.168/hip/roc-2.6.0/cmake" -DHIPBLAS_DIR="/sw/summit/hip/hip2.6-cuda10.1.168/hipblas/rocm-2.6/hipblas/lib/cmake/hipblas" -DHIP_HIPCC_FLAGS="-rdc=true -I/sw/summit/hip/hip2.6-cuda10.1.168/hip/roc-2.6.0/include -I/sw/summit/hip/hip2.6-cuda10.1.168/hipblas/rocm-2.6/include" -DCMAKE_CXX_FLAGS="-rdc=true -I/sw/summit/hip/hip2.6-cuda10.1.168/hip/roc-2.6.0/include -I/sw/summit/hip/hip2.6-cuda10.1.168/hipblas/rocm-2.6/include" -DHIP_HCC_FLAGS="-rdc=true -I/sw/summit/hip/hip2.6-cuda10.1.168/hip/roc-2.6.0/include -I/sw/summit/hip/hip2.6-cuda10.1.168/hipblas/rocm-2.6/include" -DHIP_NVCC_FLAGS="-rdc=true -I/sw/summit/hip/hip2.6-cuda10.1.168/hip/roc-2.6.0/include -I/sw/summit/hip/hip2.6-cuda10.1.168/hipblas/rocm-2.6/include" -DCUDA_NVCC_FLAGS="-rdc=true -I/sw/summit/hip/hip2.6-cuda10.1.168/hip/roc-2.6.0/include -I/sw/summit/hip/hip2.6-cuda10.1.168/hipblas/rocm-2.6/include" -DCMAKE_EXE_LINKER_FLAGS="-L/sw/summit/hip/hip2.6-cuda10.1.168/hipblas/rocm-2.6/hipblas/lib -lhipblas"
# --debug-trycompile --debug-output 
